# =====================================================
# Rss-Easy 环境变量配置
# =====================================================

# 数据库连接
DATABASE_URL="postgresql://user:password@localhost:5432/rss_easy"

# 认证配置
NEXTAUTH_SECRET="your-secret-key-here-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# =====================================================
# AI 服务配置（至少配置一个）
# =====================================================

# 默认AI提供商: openai | anthropic | deepseek | ollama | custom
AI_PROVIDER="openai"

# 默认模型名称
AI_MODEL="gpt-4o"

# ---------- OpenAI ----------
OPENAI_API_KEY="sk-xxx"

# ---------- Anthropic Claude ----------
ANTHROPIC_API_KEY="sk-ant-xxx"

# ---------- DeepSeek ----------
DEEPSEEK_API_KEY="sk-xxx"

# ---------- Ollama（本地部署）----------
OLLAMA_BASE_URL="http://localhost:11434"

# ---------- 自定义 API（OpenAI 兼容格式）----------
# 使用自定义 API 时，将 AI_PROVIDER 设置为 "custom"
CUSTOM_API_BASE_URL="https://your-api-endpoint.com/v1"
CUSTOM_API_KEY="your-custom-api-key"
CUSTOM_API_MODEL="your-model-name"

# 常见的自定义 API 示例：
# 1. Moonshot（月之暗面）
# CUSTOM_API_BASE_URL="https://api.moonshot.cn/v1"
# CUSTOM_API_KEY="sk-xxx"
# CUSTOM_API_MODEL="moonshot-v1-8k"
# AI_PROVIDER="custom"

# 2. 通义千问
# CUSTOM_API_BASE_URL="https://dashscope.aliyuncs.com/compatible-mode/v1"
# CUSTOM_API_KEY="sk-xxx"
# CUSTOM_API_MODEL="qwen-plus"
# AI_PROVIDER="custom"

# 3. 智谱 GLM
# CUSTOM_API_BASE_URL="https://open.bigmodel.cn/api/paas/v4"
# CUSTOM_API_KEY="xxx"
# CUSTOM_API_MODEL="glm-4-plus"
# AI_PROVIDER="custom"

# 4. 百度文心
# CUSTOM_API_BASE_URL="https://aip.baidubce.com/rpc/2.0/ai_custom/v1/wenxinworkshop/chat"
# CUSTOM_API_KEY="xxx"
# CUSTOM_API_MODEL="ERNIE-Bot-4"

# 5. 自建 OpenAI 兼容 API（如 LocalAI、text-generation-webui）
# CUSTOM_API_BASE_URL="http://localhost:5000/v1"
# CUSTOM_API_KEY="any-string"
# CUSTOM_API_MODEL="your-model"

# =====================================================
# 其他配置
# =====================================================

# Redis配置（用于缓存和队列）
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# 定时任务密钥（用于 Cron Job 验证）
CRON_SECRET="your-cron-secret-key-here"

# 文件存储（可选）
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# 邮件配置（可选）
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# 应用配置
NODE_ENV="development"
APP_URL="http://localhost:3000"
